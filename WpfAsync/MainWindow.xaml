<Window x:Class="WpfAsync.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfAsync"
        mc:Ignorable="d"
        Title="MainWindow" Height="150" Width="500">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
            </Grid.ColumnDefinitions>
        <Button x:Name="Rechnen" Content="Start" Command="{Binding CalcCmd}" Grid.Column="0"  Margin="10" />
        <TextBlock x:Name="Ergebnis" Text="{Binding Wert}" Grid.Column="1" Margin="10" FontSize="16" />
        <CheckBox Grid.Column="2" Content="CheckBox" HorizontalAlignment="Left" Margin="36,0,0,0" VerticalAlignment="Center"/>

    </Grid>
</Window>
